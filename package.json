{
  "name": "react-hot-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for ReactJS project with hot code reloading",
  "scripts": {
    "start": "webpack-dev-server",
    "lint": "eslint src",
    "prebuild": "rimraf dist",
    "build": "cross-env NODE_ENV=production webpack -p --config webpack.config.production.js",
    "postbuild": "copyfiles index.html dist",
    "styleguide-server": "styleguidist server",
    "styleguide-build": "styleguidist build",
    "json-server": "json-server ./src/config/json-server.js --routes ./routes.json -p 3001"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gaearon/react-hot-boilerplate.git"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack"
  ],
  "author": "Dan Abramov <dan.abramov@me.com> (http://github.com/gaearon)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gaearon/react-hot-boilerplate/issues"
  },
  "homepage": "https://github.com/gaearon/react-hot-boilerplate",
  "devDependencies": {
    "axios": "^0.15.3",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "casual": "^1.5.11",
    "copyfiles": "^1.2.0",
    "cross-env": "^3.1.4",
    "json-server": "^0.8.22",
    "react-hot-loader": "^3.0.0-beta.6",
    "rimraf": "^2.6.0",
    "uuid": "^3.0.1",
    "webpack": "^2.2.1",
    "webpack-dev-server": "^2.2.0"
  },
  "dependencies": {
    "autobind-decorator": "^1.3.4",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "classnames": "^2.2.5",
    "css-loader": "^0.27.1",
    "dexie": "^1.5.1",
    "dexie-relationships": "^1.2.3",
    "eslint": "^3.14.1",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.41.0",
    "lodash": "^4.17.4",
    "mobx": "^3.1.5",
    "mobx-react": "^4.1.3",
    "moment": "^2.17.1",
    "node-sass": "^4.5.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-router": "^4.0.0",
    "react-router-dom": "^4.0.0",
    "react-slick": "^0.14.7",
    "react-styleguidist": "^4.6.3",
    "recompose": "^0.22.0",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.13.2"
  }
}
